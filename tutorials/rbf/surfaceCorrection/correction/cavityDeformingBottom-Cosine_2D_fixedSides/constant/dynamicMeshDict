FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      motionProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dynamicFvMesh   dynamicMotionSolverFvMesh;

solver          RBFMeshMotionSolver;

movingPatches   ( bottom );

fixedPatches   ( top leftRight );

staticPatches 	( );

coarsening
{
  enabled true;
  tol 1e-1;
  minPoints 2;
  maxPoints 800;

  livePointSelection true;
  tolLivePointSelection 1e-1;
  twoPointSelection false; //default: false
  surfaceCorrection true; //default: false  

  exportSelectedPoints true;
}

